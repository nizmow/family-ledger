# Main entry point for Fava/Bean-check
BEANCOUNT_MAIN_FILE=main.bean

# Directory where new CSVs are dropped
BEANCOUNT_IMPORTS_DIR=imports

# File where new imports are staged
BEANCOUNT_STAGING_FILE=staging/import.bean

# Directory containing the year-by-year ledger files
BEANCOUNT_LEDGER_DIR=ledgers

# Directory where processed CSVs are archived
BEANCOUNT_ARCHIVE_DIR=archive

# Path to the personal account definitions
BEANCOUNT_ACCOUNTS_FILE=accounts.bean

# Path to the categorization rules (YAML)
BEANCOUNT_RULES_FILE=user_rules.yaml
